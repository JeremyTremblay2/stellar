<UserControl x:Class="Appli.usersControls.UCAstres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appli.usersControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <ListBox ItemsSource="{Binding LesAstres}">
        <ListBox.ItemTemplate>
            <DataTemplate>
                <WrapPanel >
                    <Ellipse Width="50" Height="50">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="/images/fonds/fond_ciel.jpg" Stretch="UniformToFill"/>
                        </Ellipse.Fill>
                    </Ellipse>
                    <StackPanel>
                        <TextBlock Text="{Binding Nom}" Style="{StaticResource texteNomAstre}"/>
                        <TextBlock Text="{Binding Age, StringFormat='Age: {0}'}" Style="{StaticResource texteInfosAstre}"/>
                    </StackPanel>
                </WrapPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>
</UserControl>
