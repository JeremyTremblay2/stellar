        <StackPanel x:Name="visibility" Height="420" Width="320" HorizontalAlignment="Left" Margin="50,0,0,0">
            <local:UCImageAstre ImageAstre="{Binding ImageAstre, ElementName=root}" Margin="0 10 0 5" 
                Largeur="110" Hauteur="110"/>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Nom : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" x:Name="Nom"/>
            </Grid>

            <Grid Margin="20,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Description : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="37,0,10,-30" x:Name="Description"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Type : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>

                <Menu Grid.Column="1" Margin="0,0,10,0">
                     <MenuItem Header="Naine Jaune" Foreground="Black" Width="248"/>
                </Menu>

                
                
                

            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Constellation : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="45,0,10,0" x:Name="Constellation"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Age : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" x:Name="Age"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Distance : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="21,0,10,0" x:Name="Distance"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Masse : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" x:Name="Masse"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Rayon : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" x:Name="Rayon"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Luminosité : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="32,0,10,0" x:Name="Luminosite"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Température : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="46,0,10,0" x:Name="Temperature"/>
            </Grid>

            <Grid Margin="20,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Style="{StaticResource texteInfosPopup}" Text="Rotation : " Grid.ColumnSpan="3" Margin="0,0,0,0">

                </TextBlock>
                <TextBox Grid.Column="1" Template="{StaticResource TextBoxRecherche}" Margin="20,0,10,0" x:Name="Rotation" Cursor="Arrow"/>
            </Grid>

        </StackPanel>
