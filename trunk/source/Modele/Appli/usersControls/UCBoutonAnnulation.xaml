<UserControl x:Class="Appli.usersControls.UCBoutonAnnulation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Appli.usersControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border HorizontalAlignment="Center" MouseEnter="EntreeSouris" MouseLeave="SortieSouris">
            <Button Width="100" Height="30" Margin="0 400 0 0" Opacity="1">
                <Button.Template>
                    <ControlTemplate>
                        <Border CornerRadius="10" BorderThickness="2" BorderBrush="DarkRed" Background="Red">
                            <TextBlock Text="Annuler" HorizontalAlignment="Center" Opacity="1" Foreground="AliceBlue"
                                           Margin="0 5 0 0"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Border>
    </Grid>
</UserControl>
