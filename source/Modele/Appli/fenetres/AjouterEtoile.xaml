        <Border CornerRadius="10">
            <Button Width="50" Height="30" Click="Valider" Background="Green" Margin="-200, 370, 180, 0" Opacity="1">
                <TextBlock Text="Valider" HorizontalAlignment="Center" Opacity="1" Foreground="White" />
            </Button>
        </Border>
    </Grid>
    
</Window>
