<Window x:Class="Appli.fenetres.AjouterEtoile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Appli.fenetres"
        xmlns:espace="clr-namespace:Espace;assembly=Modele" 
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="AjouterEtoile" Height="450" Width="800">

    <Window.Resources>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type System:Enum}" x:Key="enumerationTypes">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="espace:TypeEtoile" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    
    <Grid>
        <Rectangle Fill="Black" Opacity="0.5" MouseLeftButtonDown="Rectangle_MouseLeftButtonDown"/>
        <Image Source="/images/UI/popup.png" Height="420" Width="320" HorizontalAlignment="Left" Margin="50 0 0 0"/>

        <StackPanel x:Name="visibility" Height="420" Width="320" HorizontalAlignment="Left" Margin="50,0,0,0">

            <TextBlock Style="{StaticResource texteNomAstre}" Text="Ajouter une étoile" HorizontalAlignment="Center"
                       Foreground="Orange" Margin="0 10 0 0" FontSize="18"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Type : " Grid.ColumnSpan="3" Margin="0,0,0,0" />
            <ComboBox ItemsSource="{Binding Source={StaticResource enumerationTypes}}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Converter={StaticResource convertisseurDEnumerationsEnTexte}}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!--<local:UCImageAstre ImageAstre="{Binding LEtoile.Image}" Largeur="50" Hauteur="50"/>-->

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Nom : " Grid.ColumnSpan="3" Margin="0 0 0 10"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" 
                     Text="{Binding LEtoile.Nom, Mode=OneWay}"/>
            
            

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Description : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="37,0,10,-30" 
                         Text="{Binding LEtoile.Description, Mode=OneWay}"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Constellation : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="45,0,10,0" 
                         Text="{Binding LEtoile.Constellation, Mode=OneWay}"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Age : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" 
                     Text="{Binding LEtoile.Age, Mode=OneWay}"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Masse : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="5,0,10,0" 
                     Text="{Binding Masse, Mode=OneWay}"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Luminosité : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="32,0,10,0" 
                         Text="{Binding LEtoile.Luminosite, Mode=OneWay}"/>

            <TextBlock Style="{StaticResource texteInfosPopup}" Text="Température : " Grid.ColumnSpan="3" Margin="0,0,0,0"/>
            <TextBox Template="{StaticResource TextBoxRecherche}" Margin="46,0,10,0" 
                         Text="{Binding LEtoile.Temperature, Mode=OneWay}"/>

        </StackPanel>

